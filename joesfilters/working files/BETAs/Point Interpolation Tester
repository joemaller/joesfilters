//numReporter(dest, (angleTo(box[0], box[2])) - (angleTo(box[0], box[1])), "(0->1) - (2->0)", kfloat2, -0.2 * dims.y, 32, 1.25);
//numReporter(dest, (angleTo(box[1], box[0])) - (angleTo(box[1], box[2])), "(1->0) - (1->2)", kfloat2, -0.15 * dims.y, 32, 1.25);
